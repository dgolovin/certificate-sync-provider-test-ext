{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2022"],
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
